<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
    <GridPane xmlns="http://javafx.com/javafx"
              xmlns:fx="http://javafx.com/fxml"
              fx:controller="org.ensak.back_office.controllers.AccueilController"
              alignment="CENTER"
              hgap="30" vgap="30">


    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>

    <!-- Visualisation des divisions -->
    <BorderPane
            prefHeight="200"
            prefWidth="400"
            style="-fx-background-color:#6AA84F"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0">
        <top>
            <HBox>
                <ImageView>
                    <image>
                        <Image requestedHeight="80"
                               requestedWidth="80"
                               url="@/images/divisions.png" />
                    </image>
                </ImageView>
                <Label text="Divisions" textFill="white">
                    <padding>
                        <Insets left="10.0" top="20.0" />
                    </padding>
                    <font>
                        <Font name="Bell MT bold" size="20" />
                    </font>
                </Label>
            </HBox>
        </top>
        <bottom>
            <Label BorderPane.alignment="BOTTOM_RIGHT"
                   text="0 Division créée"
                   textFill="white">
                <padding>
                    <Insets right="20" bottom="10"/>
                </padding>
                <font>
                    <Font name="Bell MT bold" size="15" />
                </font>
            </Label>
        </bottom>
    </BorderPane>

    <!-- Visualisation des employés -->
    <BorderPane
            prefHeight="200"
            prefWidth="400"
            style="-fx-background-color:#2B78E4"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0">
        <top>
            <HBox>
                <ImageView>
                    <image>
                        <Image requestedHeight="80"
                               requestedWidth="80"
                               url="@/images/employes.png" />
                    </image>
                </ImageView>
                <Label text="Employés" textFill="white">
                    <padding>
                        <Insets left="10.0" top="20.0" />
                    </padding>
                    <font>
                        <Font name="Bell MT bold" size="20" />
                    </font>
                </Label>
            </HBox>
        </top>
        <bottom>
            <Label BorderPane.alignment="BOTTOM_RIGHT"
                   text="0 Employé enregistré"
                   textFill="white">
                <padding>
                    <Insets right="20" bottom="10"/>
                </padding>
                <font>
                    <Font name="Bell MT bold" size="15" />
                </font>
            </Label>
        </bottom>
    </BorderPane>

    <!-- Visualisation des procédures -->
    <BorderPane GridPane.columnIndex="0"
                GridPane.rowIndex="1"
                GridPane.columnSpan="2"
                prefHeight="200"
                prefWidth="400"
                style="-fx-background-color:#BF9000">
        <top>
            <HBox>
                <ImageView>
                    <image>
                        <Image requestedHeight="80"
                               requestedWidth="80"
                               url="@/images/procedures.png" />
                    </image>
                </ImageView>
                <Label text="Procédures" textFill="white">
                    <padding>
                        <Insets left="10.0" top="20.0" />
                    </padding>
                    <font>
                        <Font name="Bell MT bold" size="20" />
                    </font>
                </Label>
            </HBox>
        </top>
        <bottom>
            <Label BorderPane.alignment="BOTTOM_RIGHT"
                   text="0 Procédure créée"
                   textFill="white">
                <padding>
                    <Insets right="20" bottom="10"/>
                </padding>
                <font>
                    <Font name="Bell MT bold" size="15" />
                </font>
            </Label>
        </bottom>
    </BorderPane>
</GridPane>
